{
  "name": "@actors-platform/user-auth",
  "version": "1.0.0",
  "description": "User authentication actor with magic links and social auth",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@actors-platform/sdk": "workspace:*",
    "better-auth": "^0.1.0",
    "jose": "^5.2.0",
    "nanoid": "^5.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-native": "^12.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "eslint": "^8.0.0",
    "react": "^18.2.0",
    "react-native": "^0.72.0",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "actor": {
    "name": "user-auth",
    "domain": "authentication",
    "pricing": {
