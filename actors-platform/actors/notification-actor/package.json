{
  "name": "notification-actor",
  "version": "1.0.0",
  "description": "Production-ready notification actor for handling email, SMS, and push notifications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:unit": "vitest run src/tests/unit",
    "test:integration": "vitest run src/tests/integration",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "twilio": "^4.19.0",
    "firebase-admin": "^11.11.0",
    "@apollo/server": "^4.9.5",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "bull": "^4.11.5",
    "ioredis": "^5.3.2",
    "handlebars": "^4.7.8",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "uuid": "^9.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.2",
    "vitest": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "tsx": "^4.6.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jsdom": "^23.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}